@using EntityLayer.Concrete
@model List<Announcement>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}

@{ 
    string color = "";
}


<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Duyurular</h4>
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Başlık</th>
                            <th>İçerik</th>
                            <th>Tarih</th>
                            <th>Tür</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            if (item.Status=="Kategori1")
                            {
                                color = "badge badge-danger";
                            }
                            if (item.Status == "Kategori2")
                            {
                                color = "badge badge-warning";
                            }
                            if (item.Status == "Kategori3")
                            {
                                color = "badge badge-info";
                            }
                            if (item.Status == "Kategori4")
                            {
                                color = "badge badge-success";
                            }
                            if (item.Status == "Kategori5")
                            {
                                color = "badge badge-primary";
                            }

                            <tr>
                                <th>@item.Id</th>
                                <td>@item.Title</td>
                                <td>@item.Content</td>
                                <td>@(((DateTime)item.Date).ToString("dd-MMM-yyyyy"))</td>
                                <td><label class="@color">@item.Status</label></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

