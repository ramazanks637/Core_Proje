
@{
    ViewData["Title"] = "AddSkill";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

@using (Html.BeginForm("AddSkill", "Skill", FormMethod.Post))
{
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <p class="card-description">Yeni Deneyim Ekleme Paneli</p>
                <form class="forms-sample">
                    <div class="form-group">
                        <label>Yetenek</label>
                        <input type="text" class="form-control" name="Title" placeholder="Yetenek Adı">
                    </div>
                    <div class="form-group">
                        <label>Değer</label>
                        <input type="text" class="form-control" name="Value" placeholder="Değeri">
                    </div>
                    <button type="submit" class="btn btn-primary mr-2">Kaydet</button>
                    <button class="btn btn-dark">İptal</button>
                </form>
            </div>
        </div>
    </div>
}