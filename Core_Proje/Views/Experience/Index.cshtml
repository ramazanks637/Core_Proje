@using EntityLayer.Concrete
@model List<Experience>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Deneyimler</h4>
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>WorkPlaceName</th>
                            <th>Date</th>
                            <th>ImageUrl</th>
                            <th>Description</th>
                            <th>ExperienceName</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.ExperienceId</td>
                                <td>@item.WorkPlaceName</td>
                                <td>@item.Date</td>
                                <td>@item.ImageUrl</td>
                                <td>@item.Description</td>
                                <td>@item.ExperienceName</td>
                                <td><a href="/Experience/DeleteExperience/@item.ExperienceId" class="btn btn-outline-danger">Sil</a></td>
                                <td><a href="/Experience/UpdateExperience/@item.ExperienceId" class="btn btn-outline-success">Güncelle</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<a href="/Experience/AddExperience" class="btn btn-outline-info">Yeni Deneyim Ekle</a>


<!-- plugins:js -->
<script src="~/corona-template/template/assets/vendors/js/vendor.bundle.base.js"></script>