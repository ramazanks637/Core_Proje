@using EntityLayer.Concrete
@model List<Experience>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="card-header border-0">
    <h3 class="mb-0">Deneyim Listesi Tablosu</h3>
</div>
<!-- Light table -->
<div class="table-responsive">
    <table class="table align-items-center table-flush">
        <thead class="thead-light">
            <tr>
                <th scope="col" class="sort" data-sort="name">#</th>
                <th scope="col" class="sort" data-sort="budget">Deneyim Adı</th>
                <th scope="col" class="sort" data-sort="status">Çalışılan Şirket Adı</th>
                <th scope="col" class="sort" data-sort="status">Tarih</th>
                <th scope="col" class="sort" data-sort="status">Görsel</th>
                <th scope="col" class="sort" data-sort="status">Açıklama</th>
                <th scope="col" class="sort" data-sort="status" width="100">Sil</th>
                <th scope="col" class="sort" data-sort="completion">Düzenle</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody class="list">

            @foreach (var item in Model)
            {
                <tr>
                    <th>
                        <h4>@item.ExperienceId</h4>
                    </th>
                    <td class="budget">
                        <span class="name mb-0 text-sm">@item.ExperienceName</span>
                    </td>
                    <td class="budget">
                        <span class="name mb-0 text-sm">@item.WorkPlaceName</span>
                    </td>
                    <td class="budget">
                        <span class="name mb-0 text-sm">@item.Date</span>
                    </td>
                    <td class="budget">
                        <img src="@item.ImageUrl" alt="Deneyim İconu" width="50" height="50" />
                    </td>
                    <td class="budget">
                        <span class="name mb-0 text-sm">@item.Description</span>
                    </td>

                    <td><a href="/Experience/DeleteExperience/@item.ExperienceId" class="btn btn-danger">Sil</a></td>
                    <td><a href="/Experience/UpdateExperience/@item.ExperienceId" class="btn btn-info">Güncelle</a></td>
                </tr>
            }
        </tbody>
    </table>
</div>
<br />
<a href="/Experience/AddExperience" class="btn btn-primary">Yeni Deneyim Ekle</a>


