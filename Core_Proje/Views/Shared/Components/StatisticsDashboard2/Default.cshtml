<div class="row">
    <div class="col-sm-4 grid-margin">
        <div class="card">
            <div class="card-body">
                <h4>Proje Sayısı</h4>
                <div class="row">
                    <div class="col-8 col-sm-12 col-xl-8 my-auto">
                        <div class="d-flex d-sm-block d-md-flex align-items-center">
                            <h2 class="mb-0">@ViewBag.ProjeSayisi</h2>
                        </div>
                        <br />
                        <h4 class="text-muted font-weight-normal">Aktif ve Tamamlanan proje sayısı</h4>
                    </div>
                    <div class="col-4 col-sm-12 col-xl-4 text-center text-xl-right">
                        <i class="icon-lg mdi mdi-codepen text-primary ml-auto"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-sm-4 grid-margin">
        <div class="card">
            <div class="card-body">
                <h4>Mesaj Sayısı</h4>
                <div class="row">
                    <div class="col-8 col-sm-12 col-xl-8 my-auto">
                        <div class="d-flex d-sm-block d-md-flex align-items-center">
                            <h2 class="mb-0">@ViewBag.MesajSayisi</h2>
                        </div>
                        <br />
                        <h4 class="text-muted font-weight-normal">Son 1 ayda gelen mesajlar</h4>
                    </div>
                    <div class="col-4 col-sm-12 col-xl-4 text-center text-xl-right">
                        <i class="icon-lg mdi mdi-wallet-travel text-danger ml-auto"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-sm-4 grid-margin">
        <div class="card">
            <div class="card-body">
                <h4>Hizmetler</h4>
                <div class="row">
                    <div class="col-8 col-sm-12 col-xl-8 my-auto">
                        <div class="d-flex d-sm-block d-md-flex align-items-center">
                            <h2 class="mb-0">@ViewBag.HizmetSayisi</h2>
                        </div>
                        <br />
                        <h4 class="text-muted font-weight-normal">Verilen hizmet detayları</h4>
                    </div> 
                </div>
            </div>
        </div>
    </div>
</div>